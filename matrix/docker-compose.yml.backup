version: '3.8'

services:
  postgres:
    image: postgres:13-alpine
    container_name: matrix-postgres
    environment:
      POSTGRES_DB: synapse
      POSTGRES_USER: synapse
      POSTGRES_PASSWORD: "1994Lks!Oliver2017."
    volumes:
      - ./postgres-data:/var/lib/postgresql/data
    restart: unless-stopped
    networks:
      - matrix-network

  redis:
    image: redis:7-alpine
    container_name: matrix-redis
    volumes:
      - ./redis-data:/data
    restart: unless-stopped
    networks:
      - matrix-network

  synapse:
    image: matrixdotorg/synapse:latest
    container_name: matrix-synapse
    depends_on:
      - postgres
      - redis
    volumes:
      - ./data:/data
    ports:
      - "8008:8008"
    environment:
      SYNAPSE_SERVER_NAME: cgraph.org
      SYNAPSE_REPORT_STATS: "yes"
    restart: unless-stopped
    networks:
      - matrix-network

networks:
  matrix-network:
    driver: bridge

volumes:
  postgres-data:
  redis-data:
